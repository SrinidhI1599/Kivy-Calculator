#:kivy 2.1.0
<MyRoot>
    calc_field: calc_field

    orientation: 'vertical'
    TextInput:
        id: calc_field
        size_hint: (1, 0.5)
        readonly: True
        disabled: True
        font_size: 64
        halign: "right"
        valign: 'middle'
        text: '0'
    GridLayout:
        rows: 5
        columns: 4
        padding: 20
        spacing: 20
        size_hine: (1, 0.2)
        Button:
            text: "%"
            font_size: 50
            on_press: root.calc_symbol('%')
        Button:
            text: "C"
            font_size: 50
            on_press: root.clear()
        Button:
            text: "BS"
            font_size: 50
            on_press: root.backspace()
        Button:
            text: "-"
            font_size: 50
            on_press: root.calc_symbol('-')

        Button:
            text: "7"
            font_size: 50
            on_press: root.calc_symbol('7')
        Button:
            text: "8"
            font_size: 50
            on_press: root.calc_symbol('8')
        Button:
            text: "9"
            font_size: 50
            on_press: root.calc_symbol('9')
        Button:
            text: "÷"
            font_size: 50
            on_press: root.calc_symbol('/')

        Button:
            text: "4"
            font_size: 50
            on_press: root.calc_symbol('4')
        Button:
            text: "5"
            font_size: 50
            on_press: root.calc_symbol('5')
        Button:
            text: "6"
            font_size: 50
            on_press: root.calc_symbol('6')
        Button:
            text: "x"
            font_size: 50
            on_press: root.calc_symbol('*')

        Button:
            text: "1"
            font_size: 50
            on_press: root.calc_symbol('1')
        Button:
            text: "2"
            font_size: 50
            on_press: root.calc_symbol('2')
        Button:
            text: "3"
            font_size: 50
            on_press: root.calc_symbol('3')
        Button:
            text: "+"
            font_size: 50
            on_press: root.calc_symbol('+')

        Button:
            text: "0"
            font_size: 50
            on_press: root.calc_symbol('0')
        Button:
            text: "."
            font_size: 50
            on_press: root.calc_symbol('.')
        Button:
            text: "x²"
            font_size: 50
            on_press: root.calc_symbol('**2')
        Button:
            text: "="
            font_size: 50
            on_press: root.get_result()

